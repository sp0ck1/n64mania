<p id="notice"><%= notice %></p>

<h1>Genres</h1>

<table>
  <thead>
    <tr>
      <th colspan="1">Genre</th>
      <th colspan="1"># Games</th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.name, genre_path(genre) %></td>
        <td><%= genre.games.size %>
        
      </tr>
    <% end %>
  </tbody>
</table>

