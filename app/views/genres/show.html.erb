<h1><%= @genre.name %></h1>

<table>

 <tr>
<th>Game Name</th>
<th>Publisher</th>
<th>Developer</th>
<th>Release Year (NA)</th>
<th>Genre</th>
<th>Raced?</th>
 </tr>

 <% @genre.games.each do |game| %>

 <tr>
  <td><%= link_to game.name, game_path(game) %></td>
  <td><%= game.publisher %></td>
  <td><%= game.developer %></td>
  <td><%= game.release_year %></td>
  <%= render partial: "games/genre_links", locals: {game: game} %>
  <% if game.raced? %>
  <td style="color: rgb(151,147,147);">Raced</td>
  <% else %>
  <td>Unraced</td>
  <% end %>
 </tr>

 <% end %>
</table>