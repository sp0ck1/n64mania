<!-- N64Mania Homepage Body -->

<div class="main">

<%= image_tag "rushlogo.png" %>
<%= form_tag("game-search", method: 'post', class: "form-inline") do %>
  <div id= "search-data" class="form-search search-data flexed" data-games="<%= @games.to_json %>">
    <%= text_field_tag :autoComplete, nil, autocomplete: :off, class: "form-control search-input" %>
    <%= submit_tag "Search", class: "btn btn-primary button-home btn-game-search" %>
  </div>
<% end %>

<div class="nav-links">
  <div class="nav-link-box">
    <a href="games" class="nav-link">List of All Games</a>
    <p class="nav-link-count"><%= @games.count %></p>
  </div>
  <div class="nav-link-box">
    <a href="races" class="nav-link">List of All Races</a>
    <p class="nav-link-count"><%= @races.count %></p>
  </div>
  <div class="nav-link-box">
    <a href="players" class="nav-link">List of All Players</a>
    <p class="nav-link-count"><%= @players.count %></p>
  </div>
  <div class="nav-link-box">
    <a href="games/unplayed" class="nav-link">List of All Unplayed Games</a>
    <p class="nav-link-count"><%= @unplayed.count %></p>
  </div>
</div>
</div>
