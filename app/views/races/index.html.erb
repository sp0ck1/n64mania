<h1>Listing Races</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @races.each do |race| %>
      <tr>
        <td><%= Game.where(id: race.game_id).first.name %></td>
        <td><%= race.date %></td>
        <td><%= link_to "Show", race %></td>
        <td><%= link_to "Edit", edit_race_path(race) %></td>
        <td><%= link_to "Destroy", race, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>