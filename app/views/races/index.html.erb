<h1>Listing Races</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date (estimated)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @races.each do |race| %>
      <tr>
        <td><%= Game.where(id: race.game_id).first.name %></td>
        <td><%= race.date %></td>
        <td><%= link_to "View", race %></td>

      </tr>
    <% end %>
  </tbody>
</table>

