<div class="games-info">
<h1> <%= @game.name %> </h1>

<p>Status: <%= @raced %> </p>
<p>Year: <%= @year %> </p>
<p>Publisher: <%= @publisher %> </p>
<p>Developer: <%= @developer %> </p>

<%= form_tag(start_race_path) do %>
  <%= text_field_tag 'goal', "Enter Race Goal" %>
  <%= hidden_field_tag 'name', @game.name %>
  <%= hidden_field_tag 'game_id', @game.id %>
  <%  if logged_in?  %>
  <%= button_tag "Start a race of #{@game.name} on Racetime.gg", data: { prompt: "test" } %>
  <%    else %>
  <%= content_tag(:div, "Login via Twitch to start races on Racetime.gg", class: "simulated-button disabled-button") %>
  <% end %>
<% end %>

<% if !@raced.nil? %>
<%= render partial: "times_raced" %>
<% end %>

</div>
